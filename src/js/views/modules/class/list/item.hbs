<div class="card mb-3">
  <div class="card-block">
		<div class="pjs__words float-right">{{{words words}}}</div>
		<div class="media">
			{{> ../partials/icon}}
			<div class="media-body">
				<h4 class="card-title mt-0 mb-1">{{name}}</h4>
				<span class="card-text text-muted">Clase {{type}}</span>
			</div>
		</div>
  </div>
	<div class="card-footer text-center">
		<button class="btn btn-sm btn-primary" title="Crear personaje" tabindex="-1">
			<i class="ra ra-aura"></i> Crear
		</button>
		<button class="btn btn-sm btn-secondary" title="Más información" tabindex="-1">
			<i class="ra ra-help"></i> Info
		</button>
	</div>
</div>
